<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/ct_bogoctron3"
    android:layout_margin="5dp"
    android:layout_height="100dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:padding="4dp"
            android:src="@drawable/cf_img"/>
        <ImageView
            android:src="@drawable/bogoc_item_giohang"
            android:layout_width="95dp"
            android:layout_height="93dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_name_cart"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:hint="Name" />
        <TextView
            android:id="@+id/tv_price_cart"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:hint="Price"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:background="#FF0000"
            android:id="@+id/btn_delete_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close_x"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/btn_remove_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_remove_circle_24"/>
            <TextView
                android:id="@+id/tv_soluong_cart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ct_bogoctron2"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:hint="10"/>
            <ImageView
                android:id="@+id/btn_add_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_add_circle"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>
