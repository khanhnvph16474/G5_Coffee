<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_btn_profile">

    <TextView
        android:id="@+id/tv_name_item_oder_admin"
        android:layout_width="144dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:text="name"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_item_oder_admin"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/xam"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_date_item_oder_admin"
        android:layout_width="137dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:text="date"
        android:textColor="@color/xam"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sdt_item_oder_admin"
        android:layout_width="173dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:text="Phone Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_item_oder_admin"
        android:textColor="@color/xam"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_product_item_oder_admin"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:text="Sản Phẩm: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/xam"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_sdt_item_oder_admin" />


    <Button
        android:id="@+id/btn_accept_item_oder_admin"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="168dp"
        android:backgroundTint="#E8DDDD"
        android:text="Chấp nhận"
        android:textColor="#4CAF50"
        android:textSize="10sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_ignore_item_oder_admin"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_product_item_oder_admin"
        app:layout_constraintVertical_bias="0.081" />
    <Button
        android:id="@+id/btn_ignore_item_oder_admin"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginEnd="12dp"
        android:text="Từ chối"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_product_item_oder_admin"
        app:layout_constraintVertical_bias="0.08"
        android:backgroundTint="#E8DDDD"
        android:textColor="@color/red"
        app:cornerRadius="15dp"/>

    <ListView
        android:id="@+id/lv_product_item_oder_admin"
        android:layout_width="296dp"
        android:layout_height="76dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_item_oder_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>